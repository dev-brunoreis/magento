{
    "name": "dev-brunoreis/magento",
    "require": {
        "aydin-hassan/magento-core-composer-installer": "~2.1.0",
        "ergebnis/composer-normalize": "^2.48",
        "openmage/magento-lts": "^20.0.0"
    },
    "config": {
        "allow-plugins": {
            "aydin-hassan/magento-core-composer-installer": true,
            "cweagans/composer-patches": true,
            "ergebnis/composer-normalize": true,
            "magento-hackathon/magento-composer-installer": true,
            "openmage/composer-plugin": true
        }
    },
    "extra": {
        "composer-normalize": {
            "indent-size": 4,
            "indent-style": "space"
        },
        "enable-patching": true,
        "magento-core-deploy": {
            "excludes": [
                "app/etc/local.xml",
                "mkdocs.yml",
                ".ddev"
            ],
            "git-ignore-append": true,
            "ignore-directories": [
                ".phpstorm.meta.php",
                ".ddev"
            ]
        },
        "magento-core-package-type": "magento-source",
        "magento-root-dir": "."
    },
    "scripts": {
        "post-install-cmd": [
            "@composer normalize"
        ],
        "post-update-cmd": [
            "@composer normalize"
        ]
    }
}
